                            "schema": {
                                "type": "object",
                                "required": ["username", "email", "password"],
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "Your name"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "Your email"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "Your password"
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {}
                    },
                    "400": {
                        "description": "User already registered or username already used.",
                        "content": {}
                    },
                    "500": {
                        "description": "Ooops! Something went wrong.",
                        "content": {}
                    }
                }
            }
